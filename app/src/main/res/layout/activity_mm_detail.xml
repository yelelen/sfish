<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/background_dark"
             android:fitsSystemWindows="true">

    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/mm_detail_recycler"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"/>-->
    <FrameLayout
        android:id="@+id/lay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_48"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="@dimen/len_44"
            android:layout_height="@dimen/len_44"
            android:clickable="true"
            android:padding="@dimen/len_8"
            android:src="@drawable/sel_back"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="美艳女人倪婷婷双峰诱惑十足"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/txt_total_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/_26"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/im_download"
            android:layout_width="@dimen/len_44"
            android:layout_height="@dimen/len_44"
            android:clickable="true"
            android:padding="@dimen/len_6"
            android:src="@drawable/sel_download"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_48"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/im_slideshow"
            android:layout_width="@dimen/len_44"
            android:layout_height="@dimen/len_44"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="@dimen/len_8"
            android:src="@drawable/sel_slideshow"/>

        <ImageView
            android:id="@+id/im_list"
            android:layout_width="@dimen/len_44"
            android:layout_height="@dimen/len_44"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="@dimen/len_8"
            android:src="@drawable/sel_list"/>

        <ImageView
            android:id="@+id/im_rotate"
            android:layout_width="@dimen/len_44"
            android:layout_height="@dimen/len_44"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="@dimen/len_4"
            android:src="@drawable/sel_rotate"/>
    </LinearLayout>

</FrameLayout>
