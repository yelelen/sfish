<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/im_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo"/>

        <ImageView
            android:id="@+id/im_xiao"
            android:layout_width="@dimen/logo_text_size"
            android:layout_height="@dimen/logo_text_size"
            android:src="@mipmap/ic_xiao"
            android:layout_toLeftOf="@+id/im_yu"
            android:layout_below="@+id/im_logo"/>

        <ImageView
            android:id="@+id/im_yu"
            android:layout_width="@dimen/logo_text_size"
            android:layout_height="@dimen/logo_text_size"
            android:src="@mipmap/ic_yu"
            android:layout_below="@id/im_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <ImageView
            android:id="@+id/im_hao"
            android:layout_width="@dimen/logo_text_size"
            android:layout_height="@dimen/logo_text_size"
            android:src="@mipmap/ic_hao"
            android:layout_toRightOf="@+id/im_yu"
            android:layout_below="@+id/im_logo"/>

    </RelativeLayout>
</FrameLayout>