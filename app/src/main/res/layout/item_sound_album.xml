<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/sound_album_height"
             xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        app:cardCornerRadius="@dimen/len_4"
        android:layout_margin="@dimen/sound_album_margin"
        app:cardElevation="@dimen/len_2">
        <ImageView
            android:id="@+id/im_sound_album_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sound_album_image_height"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo"
            android:layout_marginBottom="@dimen/len_28"/>
        <TextView
            android:id="@+id/label_sound_album_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="中国古代历史与人物之秦始皇"
            android:textSize="@dimen/font_12"
            android:gravity="center"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/len_2"/>
    </android.support.v7.widget.CardView>


</FrameLayout>