<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/bg_color">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sound_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.yelelen.sfish.view.CircleButton
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/len_32"
        app:bgColor="@android:color/black"
        app:imagePadding="@dimen/len_6"
        app:imageSrc="@mipmap/sound_small"
        app:ringColor="@android:color/white"/>


</FrameLayout>