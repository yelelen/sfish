<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="126dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/mm_margin"
        app:cardBackgroundColor="#eeffffff"
        app:cardCornerRadius="4dp"
        app:cardElevation="@dimen/len_2"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_item_mm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/ic_logo"/>

            <TextView
                android:id="@+id/txt_label"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="@dimen/len_1"
                android:layout_marginBottom="@dimen/len_1"
                android:layout_gravity="center_horizontal"
                android:text="美女"
                android:textSize="@dimen/font_12"
                android:textColor="#aa343434"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>