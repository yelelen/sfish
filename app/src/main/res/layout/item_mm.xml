<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/mm_margin"
        app:cardBackgroundColor="#eeffffff"
        app:cardCornerRadius="6dp"
        app:cardElevation="@dimen/len_2"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_item_mm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mm_height"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logo"/>

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/len_4"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="美女"
                android:textColor="#aa343434"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

              <ImageView
                  android:layout_width="14dp"
                  android:layout_height="14dp"
                  android:src="@drawable/ic_see_num"
                  android:layout_margin="@dimen/len_2"/>
                <TextView
                    android:id="@+id/txt_seen_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textColor="#afafaf"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/len_2"
                    android:layout_marginBottom="@dimen/len_4"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_fav_num"
                    android:layout_margin="@dimen/len_2"/>
                <TextView
                    android:id="@+id/txt_fav_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="234"
                    android:textColor="#afafaf"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/len_2"
                    android:layout_marginBottom="@dimen/len_4"
                    android:layout_marginRight="@dimen/len_4"/>
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>