<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleButton">
        <attr name="radius" format="dimension"/>
        <attr name="imagePadding" format="dimension"/>
        <attr name="imageSrc" format="reference" />
        <attr name="bgColor" format="color"/>
        <attr name="ringColor" format="color"/>
        <attr name="ringWidth" format="dimension"/>
        <attr name="bgAlpha" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SearchBar">
        <attr name="sb_radius" format="dimension"/>
        <attr name="sb_bgColor" format="color"/>
        <attr name="sb_promptColor" format="color"/>
        <attr name="sb_textColor" format="color"/>
        <attr name="sb_textSize" format="dimension"/>
        <attr name="sb_bgAlpha" format="integer"/>
        <attr name="sb_prompt" format="string"/>
    </declare-styleable>

    <declare-styleable name="VoiceButtton">
        <attr name="vb_imagePadding" format="dimension"/>
        <attr name="vb_bgColor" format="color"/>
        <attr name="vb_ringColor" format="color"/>
        <attr name="vb_ringWidth" format="dimension"/>
        <attr name="vb_bgAlpha" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CircleSeekBar">
        <attr name="cs_progressColor" format="color|reference"/>
        <attr name="cs_secondProgressColor" format="color|reference"/>
        <attr name="cs_backgroundProgressColor" format="color|reference"/>
        <attr name="cs_progressAlpha" format="integer"/>
        <attr name="cs_secondProgressAlpha" format="integer"/>
        <attr name="cs_backgroundProgressAlpha" format="integer"/>
        <attr name="cs_progressBarWidth" format="dimension"/>
        <attr name="cs_secondProgressBarWidth" format="dimension"/>
        <attr name="cs_backgroundProgressBarWidth" format="dimension"/>
        <attr name="cs_indicatorImageSrc" format="reference"/>
        <attr name="cs_indicatorImagePressSrc" format="reference"/>
        <attr name="cs_indicatorAlpha" format="integer" />
        <attr name="cs_totalDegree" format="integer" />
        <attr name="cs_startAngle" format="integer" />
    </declare-styleable>

</resources>